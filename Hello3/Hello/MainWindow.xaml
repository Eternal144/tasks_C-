<Window x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="fordatabinding"  Background="Black" Margin="0,-12,-0.4,12"  >
        <TextBlock  Background="Black"  FontSize="30" Foreground="#FFB39265" VerticalAlignment="Center" TextAlignment="Center">Hello World!</TextBlock>
        <TextBlock Text="{Binding Input}"  Background="Black" VerticalAlignment="Center" FontSize="25" Foreground="#FFB39265"  TextAlignment="Center" Margin="0,230,-0.4,150" />
    </Grid>
</Window>
